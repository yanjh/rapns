<h1>Listing Apps</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Environment</th>
    <th>Connections</th>
    <th>Certificate</th>
    <th></th>
  </tr>

<% @apps.each do |papp| %>
  <tr>
    <td><%= papp.name %></td>
    <td><%= papp.environment %></td>
    <td><%= papp.connections %></td>
    <td><%= "[Configed...]" if papp.certificate %></td>
    <td><%= link_to 'Show', app_path(papp) %>|
    <%= link_to 'Edit', edit_app_path(papp) %>|
    <%= link_to 'Destroy', app_path(papp), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

