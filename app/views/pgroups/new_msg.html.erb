<h1>Send Message for Group</h1>

<hr>
Group:  [<%= @pgroup.name %>]<br>
Application: [<%= @papp.name %>]
<hr>  
<%= form_for(@pmessage,:url=>send_msg_pgroup_path(@pgroup)) do |f| %>
  <% if @pmessage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pmessage.errors.count, "error") %> prohibited this pgroup from being saved:</h2>

      <ul>
      <% @pmessage.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows=>4,:cols=>80 %>
  </div>
  <div class="field">
    <%= f.label :badge %><br />
    <%= f.number_field :badge %>
  </div>
  <div class="field">
    <%= f.label :sound %><br />
    <%= f.text_field :sound %>
  </div>
  <div class="actions">
    <%= f.submit "Send"%>
  </div>
<% end %>


<%= link_to 'Back', pgroups_path %>
